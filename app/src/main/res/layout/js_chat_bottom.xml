<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 录音、输入框、表情、加号 -->
    <com.jj.investigation.openfire.view.chatbottom.JSChatInputView
        android:id="@+id/jschat_key_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fl_menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:visibility="gone">

        <com.jj.investigation.openfire.view.chatbottom.JSChatPlusMenu
            android:id="@+id/jschat_plus_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="9dp"
            android:visibility="gone"/>

        <com.jj.investigation.openfire.view.chatbottom.JSChatEmojMenu
            android:id="@+id/jschat_emoj_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="9dp"
            android:visibility="gone"/>

    </FrameLayout>


</LinearLayout>
